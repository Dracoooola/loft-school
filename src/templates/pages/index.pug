block variables
  - var title = 'Добро пожаловать'

block content
  .index
    .authorization-link-container
      a(href="/authorization.html").authorization-link Авторизация
    .index-container 
      .authorization-form-container
        .authorization-form
          .authorization-form_top
            .authorization-author
              .user__pic.authorization_avatar
              h2.name.authorization-name Владислав Климов
              h3.name.authorization-site Личный сайт разработчика
            ul.socials.authorization-socials__list
              li.socials__item.authorization-socials__item
                a(href="").socials__link
                  svg.socials__icon.socials__icon-vk.authorization-icons
                    use(xlink:href="assets/images/sprite/sprite.svg#vk")
              li.socials__item.authorization-socials__item
                a(href="").socials__link
                  svg.socials__icon.authorization-icons
                    use(xlink:href="assets/images/sprite/sprite.svg#git")
